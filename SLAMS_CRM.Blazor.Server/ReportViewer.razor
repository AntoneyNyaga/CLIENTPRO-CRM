@using DevExpress.AspNetCore.Reporting
@using DevExpress.XtraReports.UI
@using SLAMS_CRM.Module.BusinessObjects.OrderManagement;

<ReportViewer @ref="reportViewer" Report="report">
    <LoadingPanel ShowLoadingText="true" LoadingText="Loading..." />
</ReportViewer>

@code {
    ReportViewer reportViewer;
    XtraReport report;

    [Parameter]
    public Invoice Invoice { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        // Create an instance of the InvoiceReporting report
        report = new Module.Reports.InvoiceReporting();
        // Set the data source of the report
        report.DataSource = Invoice;
    }
}
